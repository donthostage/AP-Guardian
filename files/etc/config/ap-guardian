config ap_guardian 'general'
	option enabled '1'
	option log_level 'INFO'
	option log_file '/var/log/ap-guardian.log'
	option check_interval '3'

config arp_spoofing 'detection'
	option enabled '1'
	option check_interval '3'
	option threshold '3'
	option block_duration '3600'
	option monitor_gateway '1'
	list trusted_devices ''

config ddos 'detection'
	option enabled '1'
	option adaptive_thresholds '1'
	
config syn_flood 'ddos'
	option enabled '1'
	option syn_per_second_threshold '100'
	option syn_ack_ratio_threshold '0.1'
	option incomplete_connections_threshold '50'

config udp_flood 'ddos'
	option enabled '1'
	option packets_per_second_threshold '1000'
	option anomaly_detection '1'

config icmp_flood 'ddos'
	option enabled '1'
	option packets_per_second_threshold '500'
	option anomaly_detection '1'

config network_scan 'detection'
	option enabled '1'

config horizontal_scan 'network_scan'
	option enabled '1'
	option hosts_threshold '10'
	option time_window '60'

config vertical_scan 'network_scan'
	option enabled '1'
	option ports_threshold '20'
	option time_window '60'

config firewall 'management'
	option enabled '1'
	option auto_block '1'
	option rate_limit '1'
	option rate_limit_packets '100'
	option rate_limit_seconds '1'
	list whitelist ''
	list blacklist ''
